{
  "$schema": "https://raw.githubusercontent.com/AArnott/vso-agent-tasks/9b41d803a/tasks.schema.json",
  "id": "9707255F-572A-4129-8153-3E020E00B2EC",
  "name": "QCloudCosUpload",
  "friendlyName": "QCloud COS File Upload",
  "description": "Upload files to QCloud COS",
  "helpMarkDown": "",
  "category": "Deploy",
  "author": "Jingchao Feng",
  "version": {
    "Major": 0,
    "Minor": 1,
    "Patch": 5
  },
  "instanceNameFormat": "Upload Files to QCloud COS",
  "groups": [
    {
      "name": "advanced",
      "displayName": "Advanced",
      "isExpanded": false
    }
  ],
  "inputs": [
    {
      "name": "apiBaseUrl",
      "type": "string",
      "label": "Api Base URL",
      "required": true,
      "defaultValue": "http://sh.file.myqcloud.com/files/v2/"
    },
    {
      "name": "appId",
      "type": "string",
      "label": "AppId",
      "defaultValue": "",
      "required": true
    },
    {
      "name": "secretId",
      "type": "string",
      "label": "SecretId",
      "defaultValue": "",
      "required": true
    },
    {
      "name": "secretKey",
      "type": "string",
      "label": "SecretKey",
      "defaultValue": "",
      "required": true
    },
    {
      "name": "bucketName",
      "type": "string",
      "label": "Bucket Name",
      "defaultValue": "",
      "required": true
    },
    {
      "name": "filesToUpload",
      "type": "multiLine",
      "label": "File to upload",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Line seperated list of file name patterns to match.\r\nSupports * wildcards."
    },
    {
      "name": "filePath",
      "type": "string",
      "label": "File Path",
      "defaultValue": "",
      "helpMarkDown": "The file path within the bucket to upload files to. All files matching the pattern will be flattened and uploaded as direct children of this path."
    },
    {
      "name": "fileAttribute",
      "type": "string",
      "label": "File Attribute",
      "defaultValue": "",
      "groupName": "advanced"
    },
    {
      "name": "insertOnly",
      "type": "boolean",
      "label": "Returns Error if File Already Exists",
      "defaultValue": true,
      "groupName": "advanced"
    }
  ],
  "execution": {
    "PowerShell3": {
      "target": "QCloudCosUpload.ps1",
      "platforms": [ "windows" ]
    }
  }
}